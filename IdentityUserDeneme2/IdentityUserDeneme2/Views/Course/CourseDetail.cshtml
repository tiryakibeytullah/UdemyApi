@model IdentityUserDeneme2.DTOs.CourseDto
@{
    ViewData["Title"] = "CourseDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<figure class="text-center">
    <figcaption class="blockquote-footer mt-1">
        <a asp-controller="Category" asp-action="Index">Turn back.</a>
    </figcaption>
</figure>

<div class="card border-0">
    <img src="@Model.Course_ImageUrl" alt="@(Model.Name + ".png")" class="img-fluid w-75" />
    <div class="card-body">
        <h3 class="card-title">@Model.Name</h3>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">
            <b>
                @Model.Price
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-currency-dollar mb-1" viewBox="0 0 16 16">
                    <path d="M4 10.781c.148 1.667 1.513 2.85 3.591 3.003V15h1.043v-1.216c2.27-.179 3.678-1.438 3.678-3.3 0-1.59-.947-2.51-2.956-3.028l-.722-.187V3.467c1.122.11 1.879.714 2.07 1.616h1.47c-.166-1.6-1.54-2.748-3.54-2.875V1H7.591v1.233c-1.939.23-3.27 1.472-3.27 3.156 0 1.454.966 2.483 2.661 2.917l.61.162v4.031c-1.149-.17-1.94-.8-2.131-1.718H4zm3.391-3.836c-1.043-.263-1.6-.825-1.6-1.616 0-.944.704-1.641 1.8-1.828v3.495l-.2-.05zm1.591 1.872c1.287.323 1.852.859 1.852 1.769 0 1.097-.826 1.828-2.2 1.939V8.73l.348.086z" />
                </svg>
            </b>
        </p>
        <p class="card-text"><small class="text-muted">@(Model.Course_Hour + " Hour")</small></p>
        <a class="btn btn-outline-primary btn-sm" asp-controller="Order" asp-action="Create" asp-route-id="@Model.Id">Buy course</a>
    </div>
</div>

