@model IdentityUserDeneme2.DTOs.InstructorWithCoursesDto
@{
    ViewData["Title"] = "IndexWithCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<figure class="text-center">
    <blockquote class="blockquote">
        <h2>Instructor</h2>
    </blockquote>
    <figcaption class="blockquote-footer mt-1">
        Page with Instructor courses.
    </figcaption>
</figure>

<div class="container">
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-md-2 g-4 mt-2">
            @foreach (var courseDetail in Model.Courses)
            {
                <div class="col-sm-6">
                    <div class="card border-0">
                        <img class="card-img-top text-center" src="@courseDetail.Course_ImageUrl" style="width:450px; height:225px;">
                        <div class="card-body">
                            <div style="max-width:440px;">
                                <h5 class="card-title">@courseDetail.Name</h5>
                                <p class="card-text">@courseDetail.Description</p>
                            </div>
                            <p class="mt-2"><strong>@(courseDetail.Price + " TL")</strong></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    @(courseDetail.Course_Hour + " Saat | Tüm Düzeyler | ")
