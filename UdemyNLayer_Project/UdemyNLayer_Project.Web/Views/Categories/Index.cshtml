@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Category Index";
}

<figure class="text-center">
    <blockquote class="blockquote">
        <h2>Categories</h2>
    </blockquote>
    <figcaption class="blockquote-footer mt-1">
        Page with category information.
    </figcaption>
    <div class="text-center">
        <a class="mb-3" asp-action="Create" style="text-decoration:none;">New Category</a>
    </div>
</figure>

<div class="container">
    <div class="col align-self-center">

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col" style="padding-right:180px; text-align:right;">Transactions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th scope="row">@category.Id</th>
                        <th scope="row">@category.Name</th>
                        <th scope="row" style="padding-right: 150px; text-align: right;">
                            <a class="btn btn-outline-success btn-sm" asp-action="Update" asp-route-id="@category.Id">Update</a>
                            <a class="btn btn-outline-danger mx-2 btn-sm" asp-action="Delete" asp-route-id="@category.Id">Delete</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

