@model IEnumerable<InstructorDto>
@{
    ViewData["Title"] = "Instructor Index";
}

<figure class="text-center">
    <blockquote class="blockquote">
        <h2>Instructors</h2>
    </blockquote>
    <figcaption class="blockquote-footer mt-1">
        Page with instructor information.
    </figcaption>
    <div class="text-center">
        <a class="mb-3" asp-action="Create" style="text-decoration:none;">New Instructor</a>
    </div>
</figure>

<div class="container">
    <div class="col align-self-center">

        @foreach (var instructor in Model)
        {
            <div class="row p-3">
                <div class="col-md-8 m-2">
                    <figure>
                        <blockquote class="blockquote">
                            <h1>@(instructor.Name + " " + instructor.Surname)</h1>
                        </blockquote>
                        <figcaption class="blockquote-footer">
                            @instructor.Degree
                        </figcaption>
                    </figure>
                    <h4 class="my-3">About</h4>
                    <div>
                        <p class="lh-base px-2">
                            @instructor.About
                        </p>
                    </div>
                    <div class="my-1" style="float:right;">
                        <a class="btn btn-outline-success btn-sm" asp-action="Update" asp-route-id="@instructor.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square mb-1" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                            Edit
                        </a>
                        <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@instructor.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash2 mb-1" viewBox="0 0 16 16">
                                <path d="M14 3a.702.702 0 0 1-.037.225l-1.684 10.104A2 2 0 0 1 10.305 15H5.694a2 2 0 0 1-1.973-1.671L2.037 3.225A.703.703 0 0 1 2 3c0-1.105 2.686-2 6-2s6 .895 6 2zM3.215 4.207l1.493 8.957a1 1 0 0 0 .986.836h4.612a1 1 0 0 0 .986-.836l1.493-8.957C11.69 4.689 9.954 5 8 5c-1.954 0-3.69-.311-4.785-.793z" />
                            </svg>
                            Delete
                        </a>
                        <a class="btn btn-outline-dark btn-sm" asp-action="IndexWithCourses" asp-route-id="@instructor.Id">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list-nested mb-1" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M4.5 11.5A.5.5 0 0 1 5 11h10a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 3 7h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm-2-4A.5.5 0 0 1 1 3h10a.5.5 0 0 1 0 1H1a.5.5 0 0 1-.5-.5z" />
                            </svg>
                            My Courses
                        </a>
                    </div>
                </div>
                <div class="col-md-3 m-2">
                    <img class="avatar rounded-circle" src="@instructor.ImageUrl" alt="Bologna">
                    <div class="text-center mt-2">
                        <button class="col-md-8 btn btn-dark">Mesaj Gönder</button>
                    </div>
                    <div class="text-center mt-2">
                        <button class="col-md-8 btn btn-outline-dark">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                                <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                            </svg>
                            Twitter
                        </button>
                    </div>
                    <div class="text-center mt-2">
                        <button class="col-md-8 btn btn-outline-dark">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-linkedin" viewBox="0 0 16 16">
                                <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z" />
                            </svg>
                            Linkedin
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .avatar {
        border: 0.3rem solid rgba(#fff, 0.3);
        margin-top: -3rem;
        margin-left: 5rem;
        margin-bottom: 1rem;
        max-width: 9rem;
    }

    #collapseDiv {
        display: none;
    }
</style>

<script src="https://code.jquery.com/jquery-3.5.1.slim.js"
        integrity="sha256-DrT5NfxfbHvMHux31Lkhxg42LY6of8TaYyK50jnxRnM=" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script type="text/javascript">
    $(function () {
        $("#collapseButton").click(function () {
            $("#collapseDiv").toggle(1000, function () {
            });
        })
    });
</script>
