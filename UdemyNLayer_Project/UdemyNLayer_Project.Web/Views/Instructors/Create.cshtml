@model InstructorDto
@{
    ViewData["Title"] = "Create";
}

<figure class="text-center">
    <blockquote class="blockquote">
        <h2>Instructors</h2>
    </blockquote>
    <figcaption class="blockquote-footer mt-1">
        Is the new instructor add page.
    </figcaption>
</figure>

<div class="container">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Surname" class="form-label">Surname</label>
                <input asp-for="Surname" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Telephone" class="form-label">Telephone</label>
                <input asp-for="Telephone" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Telephone"></span>
            </div>

            <div class="mb-3">
                <label asp-for="About" class="form-label">Description</label>
                @Html.TextAreaFor(x => x.About, new { @class = "form-control col-md-6", rows = "4", cols = "4" })
                <span asp-validation-for="About"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Degree" class="form-label">Degree</label>
                <input asp-for="Degree" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Degree"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Mail" class="form-label">Mail</label>
                <input asp-for="Mail" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Mail"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" id="myPassword" type="password" class="form-control col-md-6" aria-describedby="emailHelp">
                <div class="form-check mt-1">
                    <input class="form-check-input" type="checkbox" onclick="myFunction()">
                    <label class="form-check-label" for="flexCheckDefault">
                        Show Password
                    </label>
                </div>
                <span asp-validation-for="Password"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-sm">Create</button>
        </form>
    </div>
</div>

<script>
    function myFunction() {
        var x = document.getElementById("myPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>

