@model CourseDto
@{
    ViewData["Title"] = "Update";
}

<figure class="text-center">
    <blockquote class="blockquote">
        <h2>Courses</h2>
    </blockquote>
    <figcaption class="blockquote-footer mt-1">
        Update existing category page.
    </figcaption>
</figure>

<div class="container">
    <div class="row">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Name"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control col-md-6", rows = "4", cols = "4" })
                <span asp-validation-for="Description"></span>
            </div>

            <label asp-for="Price" class="form-label">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input asp-for="Price" type="text" class="form-control col-md-6" />
                <span class="input-group-text">.00</span>
                <span asp-validation-for="Price"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Course_Hour" class="form-label">Course Hour</label>
                <input asp-for="Course_Hour" type="text" class="form-control col-md-6" aria-describedby="emailHelp">
                <span asp-validation-for="Course_Hour"></span>
            </div>

            <div class="mb-3">
                <label asp-for="InstructorId" class="form-label">Instructor</label>
                @Html.DropDownListFor(x => x.InstructorId, (List<SelectListItem>)ViewBag.instructorList, new { @class = "form-control col-md-6" })
                <span asp-validation-for="InstructorId"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categoryList, new { @class = "form-control col-md-6" })
                <span asp-validation-for="CategoryId"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-sm">Update</button>
        </form>
    </div>
</div>